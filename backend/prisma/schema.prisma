generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model cards {
  id          Int           @id @default(autoincrement())
  name        String
  url         String
  created_at  DateTime?     @default(now()) @db.Timestamp(6)
  collections collections[]
  score       score?
}

model collections {
  id         Int       @id @default(autoincrement())
  card_id    Int
  user_id    Int
  created_at DateTime? @default(now()) @db.Timestamp(6)
  cards      cards     @relation(fields: [card_id], references: [id], onDelete: Cascade)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model score {
  id         Int          @id @default(autoincrement())
  user_id    Int?
  count      Decimal?     @db.Decimal(10, 2)
  time       Decimal?     @db.Decimal(10, 2)
  level      score_levels
  created_at DateTime?    @default(now()) @db.Timestamp(6)
  cards      cards        @relation(fields: [id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "score_user_id_fkey")
}

model users {
  id          Int           @id @default(autoincrement())
  user_name   String        @unique
  email       String        @unique
  password    String
  created_at  DateTime?     @default(now()) @db.Timestamp(6)
  collections collections[]
}

enum score_levels {
  easy
  medium
  hard
}
